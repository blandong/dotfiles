" map leader to comma
let mapleader = ","
:set smartcase
:set ignorecase
:set hlsearch
:set incsearch
:set number
:set cursorline
:set nolist
:set nospell
:set clipboard=
inoremap jk <Esc>
nnoremap <leader>nh :set hls!<CR>

nnoremap <leader>y "+y
vnoremap <leader>y "+y

#copy current line to system clipboard
nnoremap <leader>yy "+yy
nnoremap <leader><leader>y :let @* = @"<CR>

nnoremap <leader>o o<ESC>k
nnoremap <leader>O O<ESC>j

